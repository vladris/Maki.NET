using Maki.Functional;
using Microsoft.VisualStudio.TestTools.UnitTesting;
using System;

namespace MakiTest
{
    [TestClass]
    public class ActionExtensionsTest
    {
        [TestMethod]
        public void ActionToFuncTest()
        {
            bool called = false;
            Action act = () => { called = true; };

            var func = act.ToFunc();
            func();

            Assert.IsTrue(called);
        }

<#
