        {
            bool called = false;
            Action<<#= JoinWithSelector(0, types, _ => "int") #>> act =
                (<#= JoinWithPrefix(types, "_") #>) => { called = true; };

            var func = act.ToFunc();
            func(<#= JoinWithPrefix(types, "") #>);

            Assert.IsTrue(called);
        }

